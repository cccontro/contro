<https://w3id.org/contro> rdf:type owl:Ontology ;
                           owl:imports <https://w3id.org/contro/arg> ,
                                       <https://w3id.org/contro/persp> ;
                           dc:creator "Alberto Ciarrocca" ,
                                      "Francesca Massarenti" ;
                           dct:created "12/03/2025" ;
                           dct:description "An ontology for extracting perspectives from arguments. It builds on the ASPIC+ framework to formalize arguments and maps them to perspectives on the topic under discussion. The mapping is implemented via object property subclassing, preserving the conceptual separation between the argument structure and the perspectival interpretation."@en ;
                           dct:license <https://creativecommons.org/licenses/by/4.0/> ;
                           dct:modified "17/06/2025" ;
                           dct:title "Controversy Ontology"@en ;
                           vann:preferredNamespacePrefix "contro" ;
