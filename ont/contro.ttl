                           rdfs:label "Contro"@en ;
                           owl:versionInfo 0.7 .

#################################################################
#    Object Properties
#################################################################

###  https://w3id.org/contro/arg#Conclusion
arg:Conclusion rdf:type owl:ObjectProperty ;
               rdfs:subPropertyOf persp:Cut .

###  https://w3id.org/contro/arg#Premise
arg:Premise rdf:type owl:ObjectProperty ;
            rdfs:subPropertyOf persp:Lens .


###  https://w3id.org/contro/arg#Topic
arg:Topic rdf:type owl:ObjectProperty ;
          rdfs:subPropertyOf persp:Eventuality .


###  https://w3id.org/contro/arg#by
arg:by rdf:type owl:ObjectProperty ;
       rdfs:subPropertyOf persp:Conceptualiser .


###  https://w3id.org/contro/persp#Background
persp:Background rdf:type owl:ObjectProperty ;
                 owl:propertyChainAxiom ( arg:ArgumentationTheory
                                          arg:KnowledgeBase
                                        ) .


###  https://w3id.org/contro/persp#contrasts
persp:contrasts rdf:type owl:ObjectProperty ;
                owl:propertyChainAxiom ( [ owl:inverseOf persp:Cut
                                         ]
                                         arg:Conclusion
                                         arg:contradicts
                                         [ owl:inverseOf arg:Conclusion
                                         ]
                                         persp:Cut
                                       ) .


